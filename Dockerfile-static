ARG OS_VER=latest
FROM alpine:${OS_VER}
RUN set -eux;\
    apk --no-cache add\
 bash\
 ccache\
 clang\
 gcc\
 glib-dev\
 glib-static\
 libc-dev\
 linux-headers\
 llvm\
 make\
 perl\
 pixman-dev\
 pixman-static\
 pkgconf\
 python2\
 python3\
 samurai\
 zlib-dev\
 zlib-static\
 ;\
    echo DONE
RUN set -eux;\
   cd /usr/lib;\
   ln -s llvm11/lib/LLVMgold.so;\
   echo DONE
